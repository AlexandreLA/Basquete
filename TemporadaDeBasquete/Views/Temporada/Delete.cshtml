@model TemporadaDeBasquete.Models.Temporada

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <h1>Delete</h1>

    <h3>Você quer mesmo deletar a temporada?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TemporadaDescricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TemporadaDescricao)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Apagar" class="btn btn-danger" /> |
            <a asp-action="Index">Voltar</a>
        </form>
    </div>
</div>