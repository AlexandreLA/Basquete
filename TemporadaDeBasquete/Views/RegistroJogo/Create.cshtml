@model TemporadaDeBasquete.Models.RegistroJogo

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <h1>Criar Registro do Jogo</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Placar" class="control-label"></label>
                    <input asp-for="Placar" class="form-control" />
                    <span asp-validation-for="Placar" class="text-danger"></span>
                </div>
                <input asp-for="MinimoTemporada" class="form-control" hidden="true" />
                <div class="form-group">
                    <input asp-for="MaximoTemporada" class="form-control" hidden="true" />
                </div>
                <div class="form-group">
                    <input asp-for="QuebraRecordeMaximo" class="form-control" hidden="true" />
                </div>
                <div class="form-group">
                    <input asp-for="QuebraRecordeMinimo" class="form-control" hidden="true" />
                </div>
                <div class="form-group">
                    <label asp-for="TemporadaId" class="control-label"></label>
                    <select asp-for="TemporadaId" class="form-control" asp-items="ViewBag.TemporadaId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-primary" />  |
                    <a asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>